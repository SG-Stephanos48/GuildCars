@model GuildCars.UI.Models.PurchaseAddViewModel

@{
    ViewBag.Title = "Purchase";
}

<div class="row">

    <div class="col-md-12">
        <h1>Purchase Vehicle</h1>
        <hr />
        <div class="span" style="border: 1px solid black">
            <br />
            <div class="row">
                <div class="row">
                    <p class="col-md-offset-1"> @Model.Car.MfgYear @Model.Car.MakeName @Model.Car.ModelName </p>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <p class="col-md-offset-2"><img src="@Url.Content("~/images/" + @Model.Car.ImageFileName)" /></p>

                    </div>
                    <div class="col-md-3">
                        <p class="recentListing">Body Style: @Model.Car.BodyStyleName </p>
                        <p class="recentListing">Trans: @Model.Car.TransName </p>
                        <p class="recentListing">Color: @Model.Car.ColorName </p>
                    </div>
                    <div class="col-md-3">
                        <p class="recentListing">Interior: @Model.Car.InteriorName </p>
                        <p class="recentListing">Mileage: @Model.Car.Mileage </p>
                        <p class="recentListing">VIN#: @Model.Car.VIN </p>
                    </div>
                    <div class="col-md-3">
                        <p class="recentListing">Sale Price: @Model.Car.SalesPrice </p>
                        <p class="recentListing">MSRP: @Model.Car.MSRP </p>
                    </div>

                </div>
                <div class="row">

                </div> <br />

            </div>

        </div><br />
    </div>

</div>

<div class="row">

    <div class="col-md-12">
        <h1>Sales Information</h1>
        <br />
        @using (Html.BeginForm("PostPurchase", "Sales", FormMethod.Post, new { id = "frmAddPurchase" }))
        {
            @Html.HiddenFor(model => model.Car.CarId)
            <div class="col-md-6">
                <div class="form-group">
                    <label>Name</label>
                    @Html.TextBoxFor(m => m.Contact.ContactName)
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.Contact.Email)
                </div>
                <div class="form-group">
                    <label>Street1</label>
                    @Html.TextBoxFor(m => m.Contact.Street1)
                </div>
                <div class="form-group">
                    <label>City</label>
                    @Html.TextBoxFor(m => m.Contact.City)
                </div>
                <div class="form-group">
                    <label>ZipCode</label>
                    @Html.TextBoxFor(m => m.Contact.ZipCode)
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Phone</label>
                    @Html.TextBoxFor(m => m.Contact.Phone)
                </div>
                <div class="form-group">

                </div>
                <div class="form-group">
                    <label>Street2</label>
                    @Html.TextBoxFor(m => m.Contact.Street2)
                </div>
                <div class="form-group">
                    <label>State</label>
                    @Html.DropDownListFor(m => m.Contact.StatesId, Model.States, new { @class = "form-control" })
                </div>
                <div class="form-group">

                </div>

            </div>

            <hr />

            <div class="col-md-12">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Purchase Price</label>
                        @Html.TextBoxFor(m => m.Purchase.PurchasePrice)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>PurchaseType</label>
                        @Html.DropDownListFor(m => m.Purchase.PurchaseTypeId, Model.PurchaseTypes, new { @class = "form-control" })
                    </div>

                </div>
            </div>

            <div class="row">
                <div>
                    <button id="btnPurchase" class="btn btn-default">Save</button>
                </div>
            </div>
        }
    </div>
</div>

